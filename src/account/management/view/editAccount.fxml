                                             <HBox.margin>
                                                <Insets top="4.0" />
                                             </HBox.margin>
                                             <font>
                                                <Font name="System Bold" size="12.0" />
                                             </font>
                                          </Label>
                                          <ComboBox fx:id="account_select" onAction="#onAccountSelect" prefHeight="25.0" prefWidth="287.0" promptText="Please Select an account" translateX="-3.0" />
