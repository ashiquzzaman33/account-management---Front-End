                                    </HBox>
                                    <HBox layoutX="40.0" layoutY="40.0" prefWidth="200.0" spacing="90.0">
                                       <children>
                                          <Label text="Select Parent">
                                             <HBox.margin>
                                                <Insets top="4.0" />
                                             </HBox.margin>
                                             <font>
                                                <Font name="System Bold" size="12.0" />
                                             </font>
                                          </Label>
                                          <ComboBox fx:id="parent_select" prefHeight="25.0" prefWidth="274.0" promptText="Please  select immediate parent account" translateX="12.0" />
                                       </children>
                                    </HBox>
                                    <HBox layoutX="40.0" layoutY="75.0" prefWidth="200.0" spacing="90.0">
                                       <children>
                                          <Label text="Description">
                                             <HBox.margin>
                                                <Insets top="4.0" />
                                             </HBox.margin>
                                             <font>
                                                <Font name="System Bold" size="12.0" />
                                             </font>
                                          </Label>
                                          <TextArea fx:id="description_input" prefHeight="80.0" prefWidth="273.0" promptText="Please enter something about this account" translateX="22.0" />
                                       </children>
                                    </HBox>
                                    <HBox nodeOrientation="RIGHT_TO_LEFT">
                                       <children>
                                          <Button fx:id="update_button" mnemonicParsing="false" onAction="#onUpdateButtonClick" text="Button" />
                                       </children>
                                    </HBox>
                                 </children>
                                 <padding>
                                    <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                                 </padding>
