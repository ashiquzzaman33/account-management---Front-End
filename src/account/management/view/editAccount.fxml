                                                <Insets top="4.0" />
                                             </HBox.margin>
                                             <font>
                                                <Font name="System Bold" size="12.0" />
                                             </font>
                                          </Label>
                                          <TextField fx:id="name_input" prefHeight="25.0" prefWidth="300.0" promptText="Enter account name" />
